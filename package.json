{
  "author": "TherapistTrack",
  "name": "therapisttrackapp",
  "version": "1.0.0",
  "workspaces": [
    "Frontend",
    "Backend"
  ],
  "description": "A medical records storage system",
  "scripts": {
    "backend:start": "npm run start -w Backend",
    "frontend:dev": "npm run dev -w Frontend",
    "frontend:build": "npm run build - Frontend",
    "frontend:preview": "npm run build - Frontend",
    "prepare": "husky",
    "lint": "npx eslint '**/*.{js,jsx,ts,tsx,vue}'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx}' --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "commit": "cz"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rushstack/eslint-patch": "^1.3.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
